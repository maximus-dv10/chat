<div class="row">
    <div class="span8 offset4">
        <h1>WebSocket ChatRoom</h1>
    </div>
</div>
<div class="row">
    <div class="span8 offset4">
        <div class="well">
            <legend>Sign in to CHAT Room</legend>
            <form method="POST" action="" accept-charset="UTF-8">
                <div class="alert alert-error" style="display:none">
                    <a class="close" data-dismiss="alert" href="#">x</a>Incorrect Username or Password!
                </div>      
                <input class="span3" placeholder="Username" type="text" name="username">
                <select name="color" placeholder="Your color">
                    <option value="red">Red</option>
                    <option value="green">Green</option>
                    <option value="blue">Blue</option>
                    <option value="magenta">Magenta</option>
                    <option value="purple">Purple</option>
                    <option value="plum">Plum</option>
                    <option value="orange">Orange</option>
                </select>
                <div class="clearfix"></div>
                <button class="btn-info btn" disabled="disabled">Login</button>      
            </form>    
        </div>
    </div>
</div>